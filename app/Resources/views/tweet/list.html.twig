{% extends "::base.html.twig" %}



    {% block title 'Liste des tweets' %}

{% block header %}
    <h1>Les derniers Tweets</h1>
{% endblock %}

{% block content %}
    <ul>
        {% for tweet in tweets %}
            <div class="panel panel-default">
                <div class="panel-body">
                    <li><a href="{{ path('app_tweet_view', { 'id' : tweet.id }) }}">{{ tweet.message }} Ã  {{ tweet.createdAt|date("H:i") }}</a></li>
                </div>
            </div>
            {% else %}
                Aucun tweet
        {% endfor %}
    </ul>
{% endblock %}



{% block footer %}
    {{ parent() }}
    <a href="{{ path('app_twig_test') }}">Lien vers la page Twig Test</a>
{% endblock %}